<html><head>
<script language="javascript">
function checkpn()
{
confirm("are you like to check number")
no=eval(prompt("Enter number")) 
if(no>0)
{
alert(no+ " is positive")
 }
else if(no<0)
{
alert(no+ " is negative")
}
else
{
alert(no+" is Zero")
}
}
 </script></head>
<body><script>
checkpn()
</script></body> </html>
