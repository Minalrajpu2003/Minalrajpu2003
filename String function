<html>
<head>
<script type="text/javascript">
function CA()
{
 str="hello"
 alert("This is  charAt() function returns index  "+ str.charAt(3) + " Character from " + str);
}
function Up()
{
  str="hello"
  alert("This is  UpperCase()function conversion of string lowercase  "+ str.toUpperCase("") + " Character from " + str);

}
function Lw()
{
 str="HELLO"
 alert("The LowerCase() function  conversion of string uppercase  "+ str.toLowerCase("") + " Character from " + str);
}
function CN()
{
 str="hello"
 alert("The concat() function returns index   "+ str.concat ("RCP","IMRD")+"  character from"+str);
 
 }
function Rp() 
{
 str="hello"
 alert("The replace() function returns index  "+str.replace ("hello","hi")+"character from"+str);
}
function SL()
{
  str="hello"
  alert("The slice() function returns index "+str.slice("1.2")+"character from"+str);
}
function L()
{
  str="hello"
  alert("The lenght properties returns index  "+str.length+" character from"+str);
}
function IN()
{
  str="hello"
  alert("The lastIndexof() function returns index   "+str.lastIndexOf("e")+" character from"+str);
}
function sr()
{
 str="hello"
 alert("The search() function return index  "+str.search("h")+"  character from"+str);
}
function Ind()
{
 str="hello"
 alert("The indexOf() function return index  "+str.indexOf("e")+"   character from"+str);
}
function Subs()
{
  str="hello"
  alert("The substring() function return index  "+str.substring("1.3")+"  character from"+str);

}

</script>
</head>
<body>
<from>
<center>
<h2>String Function in Javascript</h2>
1.<input type="button" value="charAt" onclick="CA()"><br><br>
2.<input type="button" value="toUpperCase" onclick="Up()"><br><br>
3.<input type="button" value="toLowerCase" onclick="Lw()"><br><br>
4.<input type="button" value="concat" onclick="CN()"><br><br>
5.<input type="button" value="replace" onclick="Rp()"><br><br>
6.<input type="button" value="slice" onclick="SL()"><br><br>
7.<input type="button" value="length" onclick="L()"><br><br>
8.<input type="button" value="lastIndexOf" onclick="IN()"><br><br>
9.<input type="button" value="search" onclick="sr()"><br><br>
10.<input type="button" value="indexOf" onclick="Ind()"><br><br>
11.<input type="button" value="substring" onclick="Subs()"><br><br>
</center>
